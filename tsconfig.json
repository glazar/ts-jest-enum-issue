{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./compiled",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "compiled"
  ]
}